<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/area_idade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_pure">
            <TextView
                android:id="@+id/title_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:text="Idade:"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/title_idade"
                android:text="0"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/title_ano_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/idade"
                android:layout_toRightOf="@+id/idade"
                android:text="Anos"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_enfermagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/preco_enfermagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/title_enfermagem"
            android:layout_toRightOf="@+id/title_enfermagem"
            android:textColor="@color/black"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/title_apartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area_idade"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/preco_apartamento"
            android:orientation="vertical"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/preco_apartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:orientation="vertical" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>