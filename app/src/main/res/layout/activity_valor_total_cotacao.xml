<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.ValorTotalCotacao">
    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Valores"
        android:textColor="@color/black"></TextView>

    <LinearLayout
        android:id="@+id/id_image_cot"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/total"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/orange_pure"></LinearLayout>

    <Button
        android:id="@+id/salve_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="50dp"
        android:paddingVertical="9dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="Salvar Comprovante"
        android:textSize="15sp"
        android:background="@drawable/custom_bottomblack" />

</RelativeLayout>