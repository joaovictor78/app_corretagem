<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.ValorTotalCotacao">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="195dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:fontFamily="sans-serif"
        android:text="00,000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="170dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:fontFamily="sans-serif"
        android:text="00,000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:text="O Plano Enfermeira R$"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Valores"
        android:textColor="@color/black"></TextView>

    <ImageView
        android:id="@+id/id_imageOperadoraSelecionada"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/total"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"></ImageView>

    <Button
        android:id="@+id/salve_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_border_arround"
        android:paddingVertical="9dp"
        android:text="Salvar Comprovante"
        android:textSize="15sp"
        app:backgroundTint="#090000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="195dp"
        android:fontFamily="sans-serif"
        android:text="O Plano Apartamento R$"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/carencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:fontFamily="sans-serif"
        android:text="CarÃªncias"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#fb8500"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carencia_text"
        android:layout_width="356dp"
        android:layout_height="177dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="270dp"
        android:fontFamily="sans-serif"
        android:text="Carencias dos planos"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#100000"
        android:textSize="15sp" />

</RelativeLayout>