<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_layout_design_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar novo funcionario"
        android:textSize="20sp"
        android:layout_marginBottom="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/userInputName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o nome"
        android:inputType="text" />
    <EditText
        android:id="@+id/userInputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o email"
        android:inputType="text" />
    <EditText
        android:id="@+id/userInputPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o telefone"
        android:inputType="text" />
</LinearLayout>