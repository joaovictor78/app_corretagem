<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    app:cardElevation="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_pure">
            <TextView
                android:id="@+id/title_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:text="Idade:"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/title_idade"
                android:text="0"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/title_ano_idade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/idade"
                android:layout_toRightOf="@+id/idade"
                android:text="Anos"
                android:textColor="@color/white" />
        </LinearLayout>






        <TextView
            android:id="@+id/title_enfermagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="Enfermagem: R$ "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/preco_enfermagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/title_enfermagem"
            android:layout_toRightOf="@+id/title_enfermagem"
            android:text="0.00"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/title_apartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:text="Apartamento: R$ "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/preco_apartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:text=" 0.00"
            android:textColor="@color/black" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>