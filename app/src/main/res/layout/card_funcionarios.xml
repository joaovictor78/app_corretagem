<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="@color/white"
    android:elevation="20dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/cicler_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cicle_avatar"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/text_circlericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name_funcionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cicler_icon"
            android:layout_toRightOf="@+id/cicler_icon"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/email_funcionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_funcionario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/cicler_icon"
            android:layout_toRightOf="@+id/cicler_icon"
            android:text="email@gmail.com"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/phone_funcionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(00) 0000-0000"
        android:textSize="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right|top"
        android:textColor="@color/black"
        />

</androidx.cardview.widget.CardView>

